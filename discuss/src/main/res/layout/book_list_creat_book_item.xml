<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:minHeight="80dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/book_list_creat_book_pic"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_launcher"
        fresco:backgroundImage="@mipmap/meme_default_image" />

    <TextView
        android:id="@+id/book_list_creat_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_list_creat_book_pic"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:padding="0dp"
        android:text="搜书大师"
        android:textColor="#2b2b2b"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/book_list_creat_book_author_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_list_creat_book_pic"
        android:layout_below="@+id/book_list_creat_book_title"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/new_ic_follower_count"/>
        <TextView
            android:id="@+id/book_list_creat_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="0dp"
            android:text="雪之舞"
            android:layout_marginLeft="5dp"
            android:textColor="#888888"
            android:textSize="11dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/book_list_creat_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_list_creat_book_pic"
        android:layout_below="@+id/book_list_creat_book_author_layout"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:padding="0dp"
        android:layout_marginRight="20dp"
        android:text="奇幻"
        android:textColor="#888888"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/book_list_creat_book_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/book_list_creat_book_author_layout"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:layout_marginRight="20dp"
        android:text="编辑推荐语"
        android:textColor="@color/text_main"
        android:textSize="10dp"
        android:background="@drawable/book_list_edit_bt"/>

    <ImageView
        android:id="@+id/book_list_creat_book_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:src="@mipmap/ssdk_country_clear_search"/>

    <View
        android:id="@+id/book_list_creat_book_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"
        android:layout_below="@id/book_list_creat_book_pic"></View>



    <TextView
        android:id="@+id/book_list_creat_book_recomm_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_list_creat_book_line"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginLeft="12dp"
        android:text="推荐语:"
        android:textColor="#F4AE46"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/book_list_creat_book_recomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_list_creat_book_recomm_tag"
        android:padding="0dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="非常不错的一本书，强烈推荐。。。"
        android:textColor="#888888"
        android:textSize="12dp" />

</RelativeLayout>