<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#88000000"
    android:padding="10dp"
    android:layout_margin="0dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/comment_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/comment_dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/comment_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comment_dialog_cancel"
            android:layout_toLeftOf="@+id/comment_dialog_submit"
            android:gravity="center"
            android:text="写评论"
            android:textSize="14dp"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/comment_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:focusable="true"
        android:background="#fff"
        android:maxLines="3"
        android:gravity="top"
        />

</LinearLayout>