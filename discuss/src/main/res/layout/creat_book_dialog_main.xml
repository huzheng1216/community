    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/discussion_book_choose_creat_ok"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:background="@drawable/book_creat_bt_back"
            android:gravity="center"
            android:onClick="onSearch"
            android:padding="0dp"
            android:text="创建"
            android:textColor="#000000"
            android:textSize="14dp" />

        <Button
            android:id="@+id/discussion_book_choose_creat_no"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:layout_toLeftOf="@id/discussion_book_choose_creat_ok"
            android:background="@drawable/book_creat_bt_back"
            android:gravity="center"
            android:onClick="onSearch"
            android:padding="0dp"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="14dp" />
    </RelativeLayout>


</LinearLayout>