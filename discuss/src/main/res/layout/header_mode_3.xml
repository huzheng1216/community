<?xml version="1.0" encoding="utf-8"?>
<com.flyersoft.discuss.weight.HeaderModeStyleThree xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#00EFEFEF"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_moder_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/header_moder_title_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="返回返回返回"
            android:textColor="#000"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/header_moder_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="选项"
        android:textColor="#000"
        android:textSize="16dp"
        android:paddingRight="20dp"
        android:visibility="gone"/>

</com.flyersoft.discuss.weight.HeaderModeStyleThree>